{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": false,
      "sourceMap": true,
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
    },
    "lib": ["esnext"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  